<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foudation//DTD Struts Configration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>
	<package name="ChangePasswordAction"  extends="struts-default" namespace="/">
		<action name="changePayPassword">
			<result name="success">/WEB-INF/jsp/alterPayPass.jsp</result>
			<result name="failed">/WEB-INF/jsp/login.jsp</result>
		</action>
		<action name="changePassword" class="ChangePasswordAction" method="changePassword">
			<result name="success">/WEB-INF/jsp/login.jsp</result>
			<result name="failed">/WEB-INF/jsp/alterLoginPass.jsp</result>
		</action>
		
		<action name="changePasswordPage" class="ChangePasswordAction" method="changePasswordPage">
			<result name="success">/WEB-INF/jsp/alterLoginPass.jsp</result>
			<result name="failed">/WEB-INF/jsp/login.jsp</result>
		</action>
	</package>
</struts> 