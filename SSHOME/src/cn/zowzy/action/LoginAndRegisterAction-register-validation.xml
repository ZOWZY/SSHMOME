<?xml version="1.0" encoding="UTF-8"?>

<!-- 数据校验
	在action所在包下面，建xml文件
	1. action类名-validation.xml  对这个类中的所有方法进行校验
	2. action类名-action的访问路劲-validation.xml  对这个类中的某个action方法进行校验
 -->
 
 <!-- 数据校验的约束 -->
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
	
<validators>

	<field name="username">
		<field-validator type="requiredstring">
			<message>用户名不能为空</message>
		</field-validator>
		 <field-validator type="regex">  
            <param name="regex"><![CDATA[^[\w\d_]{6,20}$]]></param>  
            <message>用户名由字母、数字或"_"组成，长度6-20位</message>  
        </field-validator>  
	</field>
	
	<field name="password">
		<field-validator type="requiredstring">
			<message>密码不能为空</message>
		</field-validator>
	</field>
	
	<field name="phone">
		<field-validator type="requiredstring">
			<message>号码不能为空</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[^1\d{10}$]]></param>   
			<message>手机号码格式不正确</message>
		</field-validator>
	</field>
	
	<field name="email">
		<field-validator type="requiredstring">
			<message>邮箱不能为空</message>
		</field-validator>
		<field-validator type="email">
			<message>邮箱格式不正确</message>
		</field-validator>
	</field>
	
	

	
</validators>